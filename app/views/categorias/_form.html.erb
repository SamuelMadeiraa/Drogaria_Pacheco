<%= form_with(model: categoria, local: true) do |form| %>
    <% if categoria.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(categoria.errors.count, 'erro') %> impediram a categoria de ser salva:</h2>
  
        <ul>
          <% categoria.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :nome %>
      <%= form.text_field :nome %>
    </div>
  
    <div class="field">
      <%= form.label :imagem %>
      <%= form.file_field :imagem %>
    </div>
  
    <div class="actions">
      <%= form.submit 'Salvar' %>
    </div>
  <% end %>
  