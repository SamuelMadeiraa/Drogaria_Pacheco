<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../assets/stylesheets/style.css">
    <link rel="shortcut icon" href="../../assets/images/logodp.png" type="image/x-icon">
    <title>Tailwind Navbar</title>
</head>

<body class="bg-white ">
<header>
<nav class="bg-minhaCor">
    <div class="container mx-auto flex items-center justify-between h-20">
        <img class="h-20" src="seu-logo.png" alt="">
        <div class="text-white text-xl font-semibold lg:hidden">
            <!-- Ícone de menu para dispositivos móveis -->
            <i class="bi bi-list"></i>
        </div>

        <!-- Barra de Pesquisa -->
        <div class="flex-grow mx-4 lg:w-1/2">
            <div class="relative">
                <input type="text"
                    class="w-full focus:outline-none border border-white py-2 px-4 rounded-full bg-white"
                    placeholder="O que você está procurando?...">
                <button class="absolute right-0 top-0 mt-3 mr-4">
                    <svg class="text-gray-600 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Icones de Navegação -->
        <div class="space-x-4 hidden lg:flex">
            <a href="#" class="text-white"><i class="bi bi-person-circle"></i></a>
            <a href="#" class="text-white"><i class="bi bi-question-circle"></i></a>
            <a href="#" class="text-white"><i class="bi bi-bell"></i></a>
            <a href="#" class="text-white"><i class="bi bi-basket3"></i></a>
        </div>
    </div>
</nav>
</header>


    <!-- Circulos da Página -->
    <section class="card-container">
    <% @products.each do |product| %>
      <div class="card-circulo">
        <img src="https://via.placeholder.com/400x200" alt="Card Image">
        <div class="card-content-circulo">
          <h2 class="card-title-circulo">Título do Card</h2>
          <p class="card-description-circulo">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet urna at nisi malesuada tincidunt.</p>
        </div>
      </div>
    <% end %>
  </section>

    <!-- Carrosel  -->
    <section class="circulo-flex-container">
        <div id="carouselExampleInterval" class="flex space-x-4 md:space-x-8 p-4 carousel slide" data-bs-ride="carousel h-20">
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpsp-trade_kimberly-huggies_29-01-24_super-1296x290.png?v=638417148083230000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpsp-ativa_cimed-lavitan_29-01-24_promo-1296x290.png?v=638421312897530000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpa-ativa_ever-home_22-01-24_super-1296x290.png?v=638415418930730000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpsp-ativa_vacina-dengue_05-01-23_promo-1296x290.png?v=638399108192930000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpa-ativa_campanha-ferias_01-01-24_car-1296x290.png?v=638394475356030000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpsp-ativa_tratamento_01-01-24_promo-1296x290.png?v=638399003508000000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpsp-ativa_volta-as-aulas_15-01-24_promo-1296x290.png?v=638409450767400000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpsp-mktp_vitamina-suplementos_18-01-24_super-1296x290.png?v=638412640897330000"
                        class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.drogariaspacheco.com.br/arquivos/dpsp-ativa_cimed-lavitan_29-01-24_promo-1296x290.png?v=638421312897530000"
                        class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        </section>
            <!-- Cards -->
                <section class="flex flex-wrap space-x-0 p-7 ml-20">
                    <div class="flex mb-4">
                         <img src="https://www.drogariaspacheco.com.br/arquivos/dpa-ativa_campanha-ferias_01-01-24_card-340x504.png?v=638393802909200000" alt="Imagem" class="w-full md:w-40 h-60 md:h-auto mr-0 md:mr-10">
                    </div>
         </section>

        
      

        <h1 class="p-7 ml-20 text-2xl md:text-3xl lg:text-4xl xl:text-5xl">Remédios mais procurados</h1>

        <section class="flex flex-wrap justify-around p-7 m-5">
        <% @products.each do |product| %>
            <div class="card">
            <%= image_tag  product.image %>
            <div class="card-content">
              <h2 class="card-title"><%= product.name %></h2>
              <p class="card-description"><%= product.description %></p>
            </div>
          </div>
        <% end %>
    </section>
    
        
        
      

  
</body>

</html>











