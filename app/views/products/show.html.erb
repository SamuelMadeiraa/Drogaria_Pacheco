<div class="flex items-center justify-center h-screen">
  <div class="w-full max-w-md p-6 bg-white rounded-md shadow-md">
    

    <h1 class="text-2xl font-bold mb-4"><%= @product.name %></h1>
      <%= image_tag  @product.image %>
    <p class="mb-2"><strong>Descrição:</strong> <%= @product.description %></p>
    <p class="mb-2"><strong>Preço R$:</strong> <%= @product.price %></p>
    <p class="mb-2"><strong>Categoria:</strong> <%= @product.category %></p>
    <strong>Quantidade:</strong> <%= @product.quantity %>

    <div class="flex justify-between mt-4">
      <%= link_to 'Editar', edit_product_path(@product), class: 'text-blue-500 hover:underline' %>
      <%= link_to 'Voltar', products_path, class: 'text-gray-500 hover:underline' %>
    </div>
  </div>
</div>
