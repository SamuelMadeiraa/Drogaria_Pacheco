<%= form_with(model: @category, local: true) do |form| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@category.errors.count, "erro") %> impediram que esta categoria fosse salva:</h2>
  
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="mb-4">
    <%= form.label :Categoria, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.select("category", Category.all.collect {|categories| [ categories.name, categories.id ] }, { include_blank: true }) %>
    </div>
    <div class="actions">
      <%= form.submit 'Salvar' %>
    </div>
  <% end %>
  